{
  "source": {
    "include": ["posts", "comments", "client/src", "event-bus", "query"],
    "includePattern": ".+\\.js(doc|x)?$",
    "excludePattern": "(node_modules)"
  },
  "plugins": ["plugins/markdown"],
  "tags": {
    "allowUnknownTags": true,
    "dictionaries": ["jsdoc", "closure"]
  },
  "templates": {
    "cleverLinks": true,
    "monospaceLinks": true
  },
  "opts": {
    "recurse": true,
    "destination": "./docs/",
    "tutorials": "./tutorials",
    "readme": "./README.md"
  }
}
